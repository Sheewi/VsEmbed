{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": [
			"ES2020"
		],
		"outDir": "./.webpack/main",
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@ai/*": [
				"src/ai/*"
			],
			"@core/*": [
				"src/core/*"
			],
			"@main/*": [
				"src/main/*"
			],
			"@shared/*": [
				"src/shared/*"
			]
		}
	},
	"include": [
		"src/main/**/*",
		"src/shared/**/*",
		"src/ai/**/*",
		"src/core/**/*"
	],
	"exclude": [
		"node_modules",
		"src/renderer",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
